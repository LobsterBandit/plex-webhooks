{
  "name": "@plex-webhooks/root",
  "private": true,
  "version": "1.0.0",
  "description": "plex-webhooks monorepo",
  "author": "lobsterbandit",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run --stream --parallel build",
    "format": "prettier --check \"*/**/*.{js,ts,tsx,md,mdx,json}\"",
    "format:write": "prettier --write \"*/**/*.{js,ts,tsx,md,mdx,json}\"",
    "start": "lerna run start --stream",
    "start:watch": "lerna run --stream --parallel start:watch",
    "lint": "eslint \"**/src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "yarn run lint --fix",
    "test": "jest"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.26.0",
    "@typescript-eslint/parser": "2.26.0",
    "eslint": "6.8.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.8.2",
    "jest": "24.9.0",
    "lerna": "3.20.2",
    "prettier": "2.0.2",
    "rimraf": "3.0.2",
    "ts-jest": "24.3.0",
    "typescript": "3.8.3"
  }
}
