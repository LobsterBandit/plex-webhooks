{
  "name": "plex-webhooks",
  "version": "1.0.0",
  "description": "Api to receive Plex webhooks",
  "author": "lobsterbandit",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -b",
    "format": "prettier --check \"*/**/*.{js,ts,tsx,md,mdx,json}\"",
    "format:write": "prettier --write \"*/**/*.{js,ts,tsx,md,mdx,json}\"",
    "start": "ts-node src/index.ts",
    "start:watch": "nodemon",
    "start:debug": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "start:debug:watch": "nodemon --exec \"npm run start:debug\"",
    "start:prod": "npm run build && node dist/index",
    "lint": "eslint --ext js,ts,tsx \"*/**/*\"",
    "lint:fix": "eslint --ext js,ts,tsx \"*/**/*\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "cookie-parser": "1.4.4",
    "cors": "2.8.5",
    "express": "4.17.1",
    "express-winston": "4.0.1",
    "multer": "1.4.2",
    "rimraf": "^3.0.0",
    "socket.io": "2.3.0",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "2.8.6",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.22",
    "@types/multer": "1.3.10",
    "@types/node": "^12.12.7",
    "@types/socket.io": "2.1.4",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "nodemon": "1.19.4",
    "prettier": "^1.19.1",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      ".git",
      "node_modules",
      "dist"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run start",
    "ext": "ts,json,js"
  }
}
